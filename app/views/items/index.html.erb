<h1>To-Do List</h1>
<hr />
<% @items.each do |item| %>
	<h2><%= item.name %></h2>
	<h3><%= "Priority" %>: <%= item.priority %></h3>
	<h3><%= "Completed" %>: <%= item.complete %></h3>
	<%= link_to 'Show Item', item_path(item) %>
	<%= link_to 'Edit', edit_item_path(item) %>
	<%= link_to 'Delete', item_path(item), method: :delete %>
<% end %>